<Window x:Class="ImpressoraEtiquetas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciador de Etiquetas" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_Arquivo">
                <MenuItem Header="_Configurações de Alinhamento" Click="Configuracoes_Click"/>
                <MenuItem Header="_Configurar Hardware da Impressora (Uso único)" Click="ConfigurarHardware_Click"/>
                <Separator/>
                <MenuItem Header="_Sair" Click="Sair_Click"/>
            </MenuItem>
        </Menu>

        <TabControl x:Name="MainTabControl" Grid.Row="1" Margin="5">
            <TabItem Header="Sócios">
                <Grid>
                    <DataGrid x:Name="SociosGrid" Margin="5" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nome Completo" Binding="{Binding NomeCompleto}" Width="*"/>
                            <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="120"/>
                            <DataGridTextColumn Header="Matrícula" Binding="{Binding Matricula}" Width="100"/>
                            <DataGridTextColumn Header="Cidade" Binding="{Binding Cidade}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Contribuintes">
                <Grid>
                    <DataGrid x:Name="ContribuintesGrid" Margin="5" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nome Completo" Binding="{Binding NomeCompleto}" Width="*"/>
                            <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="120"/>
                            <DataGridTextColumn Header="Matrícula" Binding="{Binding Matricula}" Width="100"/>
                            <DataGridTextColumn Header="Cidade" Binding="{Binding Cidade}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Pronto"/>
            </StatusBarItem>
        </StatusBar>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0">
            <Button Content="Adicionar" Margin="5" Padding="10,5" Click="Adicionar_Click"/>
            <Button Content="Editar" Margin="5" Padding="10,5" Click="Editar_Click"/>
            <Button Content="Excluir" Margin="5" Padding="10,5" Click="Excluir_Click"/>
            <Button Content="Imprimir" Margin="5,20,5,5" Padding="10,5" FontWeight="Bold" Background="LightGreen" Click="Imprimir_Click"/>
        </StackPanel>
    </Grid>
</Window>