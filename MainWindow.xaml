<Window x:Class="ImpressoraEtiquetas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciador de Etiquetas" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="_Arquivo">
                <MenuItem Header="_Configurações de Alinhamento" Click="Configuracoes_Click"/>
                <MenuItem Header="_Configurar Hardware da Impressora (Uso único)" Click="ConfigurarHardware_Click"/>
                <Separator/>
                <MenuItem Header="_Sair" Click="Sair_Click"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" Grid.Column="0" Margin="1,5,5,5" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Buscar:" VerticalAlignment="Center" Margin="0,0,5,0"/>

            <TextBox Grid.Column="1" x:Name="SearchTextBox" VerticalAlignment="Center" TextChanged="SearchTextBox_TextChanged"/>

            <Button Grid.Column="2" x:Name="ClearSearchButton" Content="X" 
            Click="ClearSearchButton_Click" 
            FontWeight="Bold" Width="25" Height="25" Margin="5,0,0,0"/>
        </Grid>

        <TabControl x:Name="MainTabControl" Grid.Row="2" Grid.Column="0" Margin="5">
            <TabItem Header="Sócios">
                <Grid>
                    <DataGrid x:Name="SociosGrid" Margin="5" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nome Completo" Binding="{Binding NomeCompleto}" Width="2*"/>
                            <DataGridTextColumn Header="Matrícula" Binding="{Binding Matricula}" Width="*"/>

                            <DataGridTextColumn Header="Empresa" Binding="{Binding Empresa}" Width="2*"/>
                            <DataGridTextColumn Header="Função" Binding="{Binding Funcao}" Width="*"/>
                            <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="*"/>

                            <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="*"/>
                            <DataGridTextColumn Header="Cidade" Binding="{Binding Cidade}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Contribuintes">
                <Grid>
                    <DataGrid x:Name="ContribuintesGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID Original" Binding="{Binding ID_Original}" />
                            <DataGridTextColumn Header="Inscrição" Binding="{Binding Inscricao}" />
                            <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                            <DataGridTextColumn Header="Dependente" Binding="{Binding Dependente}" />
                            <DataGridTextColumn Header="Trabalho" Binding="{Binding Trabalho}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top" Margin="5,10,10,0">
            <Button Content="Adicionar" Margin="5" Padding="10,5" Click="Adicionar_Click"/>
            <Button Content="Editar" Margin="5" Padding="10,5" Click="Editar_Click"/>
            <Button Content="Excluir" Margin="5" Padding="10,5" Click="Excluir_Click"/>
            <Button Content="Imprimir" Margin="5,20,5,5" Padding="10,5" FontWeight="Bold" Background="LightGreen" Click="Imprimir_Click"/>
        </StackPanel>

        <StatusBar Grid.Row="3" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Pronto"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>